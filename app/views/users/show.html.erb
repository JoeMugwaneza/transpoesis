<!-- main column container -->
<div class="col-md-8">


  <%= render "signupmodal" %><!--  signup modal -->
  <%= render "layouts/feedback" %>
  <%#= render "posts/ad" %>


  <% @user_posts.each do |post|%>

  <div class="col-md-12 main-box">
     <!-- edit and delete buttons for posts  
     buttons for poem owner and admin -->
     <div class="col-md-12">      
      <div class="col-xs-12 col-md-6 col-md-offset-6">      
        <div class="action">
          <button type="button" class="btn btn-primary btn-xs" onclick="location.href='<%= post_path(post) %>'" title="Read it, before you publish it"><span class="glyphicon glyphicon-ok-sign"></span> Publish</button>
          <button type="button" class="btn btn-primary btn-xs" title="Firstly, read it"><span class="glyphicon glyphicon-ok-sign"></span> Feedback</button>
          <button type="button" class="btn btn-primary btn-xs" onclick="location.href='<%= edit_post_path(post) %>'" title="Edit">
            <span class="glyphicon glyphicon-pencil"></span>
          </button>
          <!-- delete poem -->
          <%= link_to '', post_path, class: "glyphicon glyphicon-trash btn btn-xs btn-warning", method: :delete, data: {confirm: "You want to delete poem titled: #{post.name}?"},  style: "color: red;"%>
        </div>
        <br>
      </div>
    </div>
    
    
    <!-- poet and poem & details -->
    <div class="col-md-12">      
      <div class="col-md-2">
        <img src="http://pioneersfestival.networktables.com/resources/userfiles/nopicture.jpg" class="img-responsive index-image" style="background-size: cover; float: right;">
      </div>

      <div class="col-md-9">
        <!-- poem and poet  -->
        <div>        
          <span style="color: #2f5369"><strong><%= "#{post.user.first_name} #{post.user.last_name}" %></strong></span> : <a href="<%#= user_path(post) %>"> <%= link_to post.name, post_path(post)%></a>
        </div>
        <div class="mic-info col-md-2 col-xs-4 "><%= post.impressionist_count(:filter=>:session_hash) %> <i class="glyphicon glyphicon-eye-open"></i></div>
        <div class="mic-info text-center col-md-9 col-xs-8"><%= time_ago_in_words(post.updated_at) %> Ago</div>
        <hr>
      </div>
    </div>
    
    <div class="col-md-9 col-md-offset-2">
      <div class="poem-body">        
        <p><%= truncate post.body, length: 250, :omission => "" , :escape => false%> | <%= link_to 'Read More', post_path(post) %></p>
      </div>
      <hr>
      
      <div class="dropup pull-right">
        <a class="btn btn-default dropdown-toggle btn-xs" type="button" data-toggle="dropdown"><span class="glyphicon glyphicon-share-alt" title="Share on different social media"></span></a>
        <ul class="dropdown-menu">
          <li>
            <a class="facebook customer share" href="https://www.facebook.com/sharer.php?u=https://codepen.io/patrickkahl" title="Facebook share" target="_blank">Facebook</a>
          </li>
          <li>
            <a class="twitter customer share" href="https://twitter.com/share?url=https://codepen.io/patrickkahl&amp;text=Share popup on &amp;hashtags=codepen" title="Twitter share" target="_blank">Twitter</a>
          </li>
          <li>
            <a class="google_plus customer share" href="https://plus.google.com/share?url=https://codepen.io/patrickkahl" title="Google Plus Share" target="_blank">Google+</a>
          </li>
          <li>
            <a class="linkedin customer share" href="https://www.linkedin.com/shareArticle?mini=true&url=https://codepen.io/patrickkahl" title="linkedin Share" target="_blank">LinkedIn</a>
          </li>

          <li>
            <a href="whatsapp://send" data-text="Text you want to Share" class="wa_btn wa_btn_s" data-href="URL you want to share" onClick="ga('send', 'event', { eventCategory: 'Social', eventAction: 'Share', eventLabel: 'WhatsAppShare', eventValue: 0});" >Whatsapp</a>
          </li>

        </ul>
      </div>

      <!-- Other buttons -->

      <button onclick="location.href='<%= post_path(post) %>'" class="btn btn-default btn-xs pull-left" title="Firstly, view the whole poem, please!"><span></span><div class="glyphicon glyphicon-plus"> </div> Favorites</button>

      <div class="text-center">
        <div class="btn-group">

          <!-- like button -->
          <!-- if liked -->
          <button onclick="location.href='<%= post_path(post) %>'" class="btn btn-primary btn-xs" title="Read the whole thing, Please!"><span>125 </span><div class="glyphicon glyphicon-heart" style=""> </div></button>

          <!-- if not liked -->
          <!-- <a href="" class="btn btn-default btn-xs" data-toggle="modal" data-target="#SignupModal"><span>124 </span><div class="glyphicon glyphicon-heart-empty"> </div></a> -->

          <a onclick="location.href='<%= post_path(post) %>'" class="btn btn-default btn-xs" title="Read the whole thing, Please!"><span>45 </span><div class="glyphicon glyphicon-comment"> </div></a>

        </div>

      </div>
    </div>

  </div>
  <% end %>
</div>
</div>