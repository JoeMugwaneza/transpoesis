<!-- table container -->
<div class="col-md-8">
  <!-- ads demo -->
  <div class="col-md-12 main-box">
    <div class="ad-title">      
      <a href="https://www.goethe.de/ins/rw/en/index.html" target="_blank" style="color: #2f5369;"><strong>Goethe Institut</strong></a> <i style="font-size: 10px;">.Sponsored</i>

      <!-- edit and delete ad buttons -->
      <div class="action pull-right">
        <button type="button" class="btn btn-primary btn-xs" title="Edit">
          <span class="glyphicon glyphicon-pencil"></span>
        </button>
        <button type="button" class="btn btn-danger btn-xs" title="Delete">
          <span class="glyphicon glyphicon-trash"></span>
        </button>
      </div>
    </div>

    <div class="col-md-12 ad-img text-center">
      <img src="http://www.livinginkigali.com/wp-content/uploads/awpcp/Goethe-Institut-Kigali-3-large.jpg">
    </div>

    <div class="col-md-12 poem-body">
      <h2 class="text-center">Calling for Applicants on Scholarship</h2>
      <p style="text-align: justify;">I've planted a tree in my heart!
        Whenever I feel tired,
        rushing,
        I sit down,
        with my back against the trunk
        I look at the sky
        through the foliage of the tree
        and peace comes back
        to my heart.</p>
      </div>
      <div class="text-center">
        <a href="https://www.goethe.de/ins/rw/en/index.html" class="btn-info btn btn-xs" target="_blank">Learn More</a>
      </div>
    </div>
    <!-- end of ad -->

    <% @posts.find_each do |post| %>  

    <a href="/posts/<%= post.id %>">

      <div class="col-md-12 main-box">
        <div class="col-md-3">
          <img src="https://s-media-cache-ak0.pinimg.com/736x/90/54/b8/9054b80d87e3e88eaf96db08d45664c8--african-portrait-photography-profile-photography.jpg" class="index-image">
        </div>
        <div class="col-md-9">
          <!-- edit and delete buttons for posts-->
          <div class="action pull-right">


          <!-- feedback modal -->
          <%= render "posts/feedback" %>
          <!-- feedback button -->

          <!-- If not feedback yet -->

          <!-- <button type="button" class="btn btn-primary btn-xs" title="Feedback" data-toggle="modal" data-target="#FeedbackModal"></span> Feedback</button> -->

          <!-- If there's feedback -->
          <button type="button" class="btn btn-success btn-xs" title="Feedback" data-toggle="modal" data-target="#FeedbackModal"><span class="glyphicon glyphicon-ok-sign"></span> Feedback</button>

            <button type="button" class="btn btn-primary btn-xs" title="Edit" onclick="location.href='<%= edit_post_path(post) %>'">
              <span class="glyphicon glyphicon-pencil"></span>
            </button>

            <button type="button" class="btn btn-danger btn-xs" title="Delete">
              <span class="glyphicon glyphicon-trash"></span>
            </button>
          </div>
          <!-- poem and poet  -->
          <a href="<%= user_path(post.user)%>" style="color: #2f5369"><strong><%= "#{post.user.first_name} #{post.user.last_name}" %></strong></a> : <a href="<%= post_path(post) %>"> <%=  post.name%></a>
          <div class="mic-info"><%= post.hits %> <i class="glyphicon glyphicon-eye-open"></i></div>
          <div class="mic-info text-center"> <span style="font-style: italic;">Poem Published <%= time_ago_in_words(post.updated_at) %> Ago</span></div>
                  <!-- publish button -->

        <!-- if not published -->
        <!-- <button type="button" class="btn btn-primary btn-xs pull-left" title="Approve to be posted"><span class="glyphicon glyphicon-ok-sign"></span> Publish</button> -->

        <!-- If published -->
        <button type="button" class="btn btn-success btn-xs pull-right" title="Approve to be posted"><span class="glyphicon glyphicon-ok-sign"></span> Published</button>
        </a> 
        <hr>

        <a href="/posts/<%= post.id %>" style="color: black;" >
          <div class="col-md-12 poem-body">
            <p><%= post.body.html_safe %>.<i style="color: blue;">| Read more</i></p>
          </div>
        </a>

      </div>

      <!-- Posts bottom buttons -->

      <!-- social media sharing buttons -->
      <div class="dropup pull-right">
        <a class="btn btn-default dropdown-toggle btn-xs" type="button" data-toggle="dropdown"><span class="glyphicon glyphicon-share-alt"></span></a>
        <ul class="dropdown-menu">
          <li>
            <a class="facebook customer share" href="https://www.facebook.com/sharer.php?u=https://codepen.io/patrickkahl" title="Facebook share" target="_blank">Facebook</a>
          </li>
          <li>
            <a class="twitter customer share" href="https://twitter.com/share?url=https://codepen.io/patrickkahl&amp;text=Share popup on &amp;hashtags=codepen" title="Twitter share" target="_blank">Twitter</a>
          </li>
          <li>
            <a class="google_plus customer share" href="https://plus.google.com/share?url=https://codepen.io/patrickkahl" title="Google Plus Share" target="_blank">Google+</a>
          </li>
          <li>
            <a class="linkedin customer share" href="https://www.linkedin.com/shareArticle?mini=true&url=https://codepen.io/patrickkahl" title="linkedin Share" target="_blank">LinkedIn</a>
          </li>

          <li>
            <a href="whatsapp://send" data-text="Text you want to Share" class="wa_btn wa_btn_s" data-href="URL you want to share" onClick="ga('send', 'event', { eventCategory: 'Social', eventAction: 'Share', eventLabel: 'WhatsAppShare', eventValue: 0});" >Whatsapp</a>
          </li>

        </ul>
      </div>

      <!-- Other buttons -->
      
      <%#= render "designs/signupmodal" %><!--  signup modal -->

      <!-- begin of Favorite codes -->
        <div class="votes">
          <% if (current_user.favorited? post) %>

            <a href="/posts/<%= post.id %>" class="btn btn-primary btn-xs" >Unfavorite</a>

          <%#= link_to "Unfavorite", post_favorite_path(post), method: :delete, remote: true, class: "unfavorite_post btn btn-primary btn-xs", title:"Remove to Favorites" %>
          <% else %>
            
            <a href="/posts/<%= post.id %>" class="btn btn-default btn-xs" ><span class="glyphicon glyphicon-plus"></span> Favorite</a>

          <%#= link_to "Favorite", post_favorites_path(post_id: post.id), method: :post, remote: true, class: "favorite_post btn btn-default btn-xs", title:"Add to Favorites" %>
          <% end %>
        </div>
        <!-- end of favorite codes -->

        <div class="text-center">
          <div class="btn-group">             
            <a href="" class="btn btn-default btn-xs"><span><%= post.get_likes.size %> </span><div class="glyphicon glyphicon-heart-empty"> </div></a>

            <a href="" class="btn btn-default btn-xs"><span><%= post.comments.size %> </span><div class="glyphicon glyphicon-comment"> </div></a>
          </div>
        </div>
      </div>

      </div>
    </div>
    <% end %>
  </div>
</div>