<%= javascript_include_tag Ckeditor.cdn_url %>
<div class="jumbotron">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <h4 class="form-control text-center" style="background-color: #112a3e; color: white;"> New Poem </h4>  

        <%= form_for @post, validate: true do |f| %>

        <div class="form-group">
          <label for="email" class="col-md-2 control-label">Title</label>
          <div class="col-md-10">
            <%= f.text_field :name, class:"form-control", placeholder:"Poem title ...", title:"Write the poem Title" %><br>            
          </div>
        </div>

        <div class="form-group">
          <label for="email" class="col-md-2 control-label">Compose Poem</label>
          <div class="col-md-10">
            <%= f.cktext_area :body %>    
          </div>.
        </div>
        
        
         <div class="col-md-9">
            
          <div class="form-group">

            <label for="icode" class="col-md-2 control-label">Choose your Favorite Categories</label>

          <div class="col-md-9">

            <%= f.collection_check_boxes :category_ids, Category.order(:name), :id, :name, {}, {multiple: true, class: "chosen-select align-checkbox"}%>
          </div>

          </div>
         </div>

        <div class="checkbox col-md-4 col-md-offset-2">
          <%= f.submit :Send, class: "btn btn-primary active form-control" %>
        </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>


