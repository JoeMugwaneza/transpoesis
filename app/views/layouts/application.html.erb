<!DOCTYPE html>
<html>
<head>
  <title>Transpoesis</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet"> 
</head>
<body>

 <nav class="navbar navbar-inverse myNavbar">
  <div class="">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand text-center" href="#">Transpoesis</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/home">Home</a></li>
        <li><a href="#">Poets</a></li>
      </ul>
      <li>

        <a href="<%= users_path%>">Member</a>
      </li>

      <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
      <% else %>
      <%= link_to "Sign Up", signup_path %> or
      <%= link_to "Log In", login_path %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="#" class="dropdown-toggle nav-content-format" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><div class="glyphicon glyphicon-user"></div> <strong>Andrea</strong></a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #ececec;"><b>Login</b> <span class="caret"></span></a>
          <ul id="login-dp" class="dropdown-menu">
            <li>
             <div class="row">
              <div class="col-md-12">
               <%=  render"login" %>
             </div>
           </div>
         </li>
       </ul>
     </li>

     <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #ececec;"><b>Join</b> <span class="caret"></span></a>
      <ul id="login-dp" class="dropdown-menu">
        <li>
         <div class="row">
          <div class="col-md-12">

           <%= render"signup" %>

         </div>
       </div>
     </li>
   </ul>
 </li>
</ul>
</div>
</div>
</nav>


<!-- body content -->

<section class="" >
  <p>
    <% flash.each do |key, value| %>
    <% alert_class = case key
    when :notice then "success"
    when :alert then "danger"
    else key
     end %>
     <%= content_tag :div, class: "alert alert-#{alert_class}" do %>
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <%= value %>
     <% end %>
     <% end %>
   </p>
   <%= yield %>
 </section>
</body>
</html>
