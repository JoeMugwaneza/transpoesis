<!DOCTYPE html>
<html>
<head>
  <title>Transpoesis</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
 <link href="https://fonts.googleapis.com/css?family=Bellefair" rel="stylesheet"> 
</head>
<body>

 <nav class="navbar navbar-inverse myNavbar" style="width: 100%;">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand text-center" href="/home">Transpoesis</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">

      <ul class="nav navbar-nav">   
      <li><a href="/poets">Poets</a></li>
    </ul>
    
      
      <!-- <li>

        <a href="<%#= users_path%>">Member</a>
      </li> -->

      <%# if current_user %>
      <!-- Logged in as <%#= current_user.email %>. -->
      <%# else %>
      <!-- <%#= link_to "Sign Up", signup_path %> or -->
      <%#= link_to "Log In", login_path %>
      <%# end %>

      <ul class="nav navbar-nav navbar-right">

        <% if current_user %>
        <li><a href="<%= new_post_path %>" class="pull-right btn btn-default btn-circle btn-outline btn-xs" role="button"><div class="glyphicon glyphicon-plus"></div><strong> Poem</strong></a></li>
        <li><a href="#" class="dropdown-toggle nav-content-format pull-right" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><div class="glyphicon glyphicon-user"></div><strong> <%= "#{current_user.last_name}" %></strong></a></li>
        <li><a href="<%= logout_path %>" class=" nav-content-format pull-right" role="button" ><strong>Logout</strong></a></li>
        <% else %>


        <li class="dropdown">
          <a href="<%= login_path %>" class="dropdown-toggle" data-toggle="dropdown" style="color: #ececec;"><b>Login</b> <span class="caret"></span></a>
          <ul id="login-dp" class="dropdown-menu">
            <li>
             <div class="row">
              <div class="col-md-12">
               <%=  render"sessions/form" %>
             </div>
           </div>
         </li>
       </ul>
     </li>

     <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: #ececec;"><b>Join</b> <span class="caret"></span></a>
      <ul id="login-dp" class="dropdown-menu">
        <li>
         <div class="row">
          <div class="col-md-12">

          <%= render :partial => "users/form" ,:locals=>{:user=> @user || User.new} %>
         </div>
       </div>
     </li>
   </ul>
 </li>
</ul>
   <% end %>
</div>
</div>
</nav>


<!-- body content -->


<div class="navbar navbar-default visible-xs">
  <div class="container-fluid">
    <button class="btn btn-default navbar-btn" data-toggle="collapse" data-target="#filter-sidebar">
      <i class="fa fa-tasks"></i> Categories
    </button>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <br>

    <!-- filter sidebar -->
    <div id="filter-sidebar" class="col-xs-9 col-sm-3 visible-sm visible-md visible-lg collapse sliding-sidebar thumbnail">

      <div>
        <h4 data-toggle="collapse" data-target="#group-1" class="form-control">
          <i class="fa fa-fw fa-caret-down parent-expanded"></i>
          <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
          <i class="glyphicon glyphicon-triangle-bottom"></i>
          Trending Poems
        </h4>
        <div id="group-1" class="list-group collapse out">
         <% 10.times do || %>
         <a class="list-group-item" href="#">
          <span class="badge pull-right">312 <i class="glyphicon glyphicon-eye-open"></i></span> Talking to my Soul
        </a>
        <% end %>
      </div>
    </div>

    <div>
      <h4 data-toggle="collapse" data-target="#group-2" class="form-control">
        <i class="fa fa-fw fa-caret-down parent-expanded"></i>
        <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
        <i class="glyphicon glyphicon-triangle-bottom"></i>
        Recently Added
      </h4>

      <div id="group-2" class="list-group collapse out">
        <% 10.times do || %>
        <a class="list-group-item" href="#">
          <span class="badge pull-right">312 <i class="glyphicon glyphicon-eye-open"></i></span> Talking to my Soul
        </a>
        <% end %>
      </div>
    </div>

    <div>
      <h4 data-toggle="collapse" data-target="#group-3" class="form-control">
        <i class="fa fa-fw fa-caret-down parent-expanded"></i>
        <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
        <i class="glyphicon glyphicon-triangle-bottom"></i>
        Recommended
      </h4>

      <div id="group-3" class="list-group collapse out">
        <% 10.times do || %>
        <a class="list-group-item" href="#">
          <span class="badge pull-right">312 <i class="glyphicon glyphicon-eye-open"></i></span> Talking to my Soul
        </a>
        <% end %>
      </div>
    </div>

    <div>
      <h4 data-toggle="collapse" data-target="#group-4" class="form-control">
        <i class="fa fa-fw fa-caret-down parent-expanded"></i>
        <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
        <i class="glyphicon glyphicon-triangle-bottom"></i>
        Favorites
      </h4>
      <div id="group-4" class="list-group collapse out">
        <% Favorite.all.each do |favorite| %>
        <a class="list-group-item" href="<%= post_path(favorite.post) %>">
          <span class="badge pull-right">312 <i class="glyphicon glyphicon-eye-open"></i></span> <%=favorite.post.name%>
        </a>
        <% end %>
      </div>
    </div>

    <div>
      <h4 data-toggle="collapse" data-target="#group-5" class="form-control">
        <i class="fa fa-fw fa-caret-down parent-expanded"></i>
        <i class="fa fa-fw fa-caret-right parent-collapsed"></i>
        <i class="glyphicon glyphicon-triangle-bottom"></i>
        Categories
      </h4>
      <div id="group-5" class="list-group collapse in">
        <% Category.all.each do |category| %>
        <a class="list-group-item" href="/posts?category=<%= category.name %>">
        <span class="badge">31k poems</span><%=category.name %>
        </a>
        <% end %>
      </div>
    </div>
  </div>








<section class="" >
  <p>
    <% flash.each do |key, value| %>
    <% alert_class = case key
    when :notice then "success"
    when :alert then "danger"
    else key
     end %>
     <%= content_tag :div, class: "alert alert-#{alert_class}" do %>
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <%= value %>
     <% end %>
     <% end %>
   </p>
   <%= yield %>
 </section>
</body>
</html>
